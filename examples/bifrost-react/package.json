{
  "name": "@bifrostql/react",
  "private": false,
  "version": "0.1.0",
  "description": "React hooks and components for BifrostQL GraphQL APIs",
  "license": "MIT",
  "author": "BifrostQL",
  "repository": {
    "type": "git",
    "url": "https://github.com/standardbeagle/bifrostql.git",
    "directory": "examples/bifrost-react"
  },
  "keywords": [
    "bifrostql",
    "graphql",
    "react",
    "hooks",
    "tanstack-query",
    "sql",
    "database",
    "table",
    "ssr"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --mode production",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ts": "tsc"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@tanstack/react-query": "^5.62.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "jsdom": "^25.0.0",
    "prettier": "^3.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.0.0"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/bifrost-react.cjs",
  "module": "./dist/bifrost-react.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/bifrost-react.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/bifrost-react.cjs"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server.d.ts",
        "default": "./dist/bifrost-react-server.js"
      },
      "require": {
        "types": "./dist/server.d.ts",
        "default": "./dist/bifrost-react-server.cjs"
      }
    }
  }
}
